<aura:component>
    <aura:attribute name="input1" type="integer" description="For First Input"/>
    <aura:attribute name="input2" type="integer" description="For Second Input"/>
    <aura:attribute name="output" type="integer" description="For Output"/>

    <lightning:input type="number" value="{!v.input1}" label="Please Enter First Value" required="true"/>
    <lightning:input type="number" value="{!v.input2}" label="Please Enter Second Value" required="true"/>
    
    <lightning:button variant="brand" name="Component Methods" label="Add" value="Component Methods" onclick="{!c.doAdd}"/>
    <lightning:button variant="brand" name="Component Methods" label="Sub" value="Component Methods" onclick="{!c.doSub}"/>
    <lightning:button variant="brand" name="Component Methods" label="Multiply" value="Component Methods" onclick="{!c.doMul}"/>
    <lightning:button variant="brand" name="Component Methods" label="Divide" value="Component Methods" onclick="{!c.doDiv}"/>
    <Br/><Br/>
    The Output is: = {!v.output}
</aura:component>